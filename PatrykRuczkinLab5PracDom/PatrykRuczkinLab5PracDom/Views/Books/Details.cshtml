@model PatrykRuczkinLab5PracDom.Models.BookDetailsViewModel


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tytuł
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Imie i nazwisko
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthorFullName)
        </dd>
        <dt class="col-sm-2">
            Kategoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
            Wydawca
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublisherName)
        </dd>
        <dt class="col-sm-2">
            Opis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Rok Wydania
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearOfRelease)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a> |
    <a asp-action="Index">Powrót</a>
</div>
